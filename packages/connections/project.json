{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/connections/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/connections",
        "main": "packages/connections/src/index.ts",
        "tsConfig": "packages/connections/tsconfig.lib.json",
        "assets": [
          "packages/connections/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/connections/**/*.ts"
        ]
      }
    }
  },
  "tags": []
}
